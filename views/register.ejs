<% include partials/header %>

<div class="container">
    <div class="row">   
        <div class="forms">    
            <h1 class="forms-title">Register For An Account</h1>
            <h5 class="forms-title text-uppercase">Its Free</span> </h5>
        
            <form action="/register" method="POST">
                       
            <!-- Username -->                   
                    <!-- Label For Username -->
                    <label for="username">Username :</label>
                  
                    <div class="input-group mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text justify-content-center" ><i class="fa fa-2x fa-user-circle" aria-hidden="true"></i></span>
                      </div>
                      <input pattern=".{5,15}" autofocus class="form-control" type="text" name="username" placeholder="Enter A Username Here" aria-describedby="Username" aria-label="Username" required title="Must be between 5 and 15 Characters">
                    </div>
      
            <!-- Full Name --                    
                    <!-- Label For Full Name -->
                    <label for="fullName"> Account Name :</label>
                    
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text justify-content-center"><i class="fa fa-2x fa-user-circle" aria-hidden="true"></i></span>
                        </div>
                        <input pattern=".{10,20}" autofocus class="form-control" type="text" name="fullName" placeholder="Enter An Account Name" aria-describedby="Full Name" aria-label="Full Name" required title="Must be between 10 and 20 Characters">
                    </div>
                                    
                
                    <!-- Label For Email -->
                    <label for="email">Email : </label>
                    
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text justify-content-center"><i class="fa fa-2x fa-envelope" aria-describedby="Email" aria-label="Email" aria-hidden="true"></i></span>
                            </div>
                            
                            <input autofocus pattern="[^@]+@[^@]+\.[a-zA-Z]{2,}" class="form-control" type="text" name="email" placeholder="Enter An Email Here" required>
                        </div>
                
                   <!-- Label For Email -->
                    <label for="email">Admin Code (Optional) : </label>
                    
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span autofocus class="input-group-text justify-content-center"><i class="fa fa-2x fa-user-secret" aria-describedby="Admin Code" aria-label="Admin Code" aria-hidden="true"></i></span>
                            </div>
                            
                            <input autofocus class="form-control" type="password" name="adminCode" placeholder="Enter The Admin Code" autofocus>
                        </div>
           

                    <!-- Label For Password -->
                    <label for="password">Password :</label>
                    
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text justify-content-center"><i class="fa fa-2x fa-key" aria-describedby="Password" aria-label="Password" aria-hidden="true"></i></span>
                            </div>
                            
                            <input autofocus pattern=".{5,15}" class="form-control" type="password" name="password" placeholder="Enter A Password" title="Must be between 5 and 15 Characters">
                        </div>
                                 
                    <!-- Label For Recaptcha-->
                    <label for ="Recaptcha"> Verification :</label>
                    
                    <!-- Input Field & Icon-->
                    <div class="input-group mb-3">
                        <div class="input-group-prepend ">
                            <span class="input-group-text justify-content-center"><i class="fa fa-2x fa-puzzle-piece"  aria-describedby="Admin Code" aria-label="Admin Code" aria-hidden="true"></i></span>
                        </div>
                        
                        <div autofocus class="form-control g-recaptcha" data-sitekey="6Ld2oUEUAAAAADxHnFQlcLgS0Hn3RYIFeQWezInQ" data-theme="light" required title="You Must Not Be A Robot"></div>                    
                    </div>
                        
                    <!-- Terms And Conditions-->
                    <label for ="TermsAndCondtion"> Terms And Conditions :</label>
                    <input type="checkbox" required autofocus title="You Are Required To Accept Terms And Condtions">
                               
                        
            <!-- Sign Up Button -->
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>